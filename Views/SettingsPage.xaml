<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DayPlanner.Views.SettingsPage"
             Title="Настройки"
             Shell.NavBarIsVisible="True">

    <ContentPage.Resources>
        <Style x:Key="SaveButton" TargetType="Button" BasedOn="{StaticResource PositiveActionButton}"/>
        <Style x:Key="ResetButton" TargetType="Button" BasedOn="{StaticResource NegativeActionButton}"/>
    </ContentPage.Resources>
    
    <ScrollView>
        <StackLayout Padding="20" Spacing="10">
            
            <Label Text="Размер шрифта" />
            <Slider Minimum="14" Maximum="18" Value="{Binding CurrentFontSize}" />

            <Label Text="Шрифт" />
            <Picker ItemsSource="{Binding Fonts}" SelectedItem="{Binding CurrentFontFamily}" />

            <Grid ColumnDefinitions="*, *" Padding="5">
                <Button Text="Сохранить настройки" Style="{DynamicResource SaveButton}" Command="{Binding SaveSettingsCommand}" 
                        Grid.Column="0" />

                <Button Text="По умолчанию" Style="{DynamicResource ResetButton}" Command="{Binding ResetSettingsCommand}" 
                        Grid.Column="1" />
            </Grid>
            
        </StackLayout>
    </ScrollView>
    
</ContentPage>