<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DayPlanner.Views.SettingsPage"
             Title="Настройки"
             Shell.NavBarIsVisible="True"
             xmlns:ViewModels="clr-namespace:DayPlanner.ViewModels"
             x:DataType="ViewModels:SettingsVM">
    
    <ScrollView>
        <StackLayout Padding="20" Spacing="10">
            
            <Label Text="Размер шрифта" />
            <Slider Minimum="14" Maximum="18" Value="{Binding FontSize}" />

            <Label Text="Шрифт" />
            <Picker ItemsSource="{Binding Fonts}"  SelectedItem="{Binding FontFamily}" />

            <Label Text="Тема" />
            <Picker ItemsSource="{Binding Themes}" SelectedItem="{Binding Theme}" />

            <Label Text="Дата"/>
            <DatePicker Date="{Binding Date}" />

            <Grid ColumnDefinitions="*, *" Padding="5">
                <Button Text="Сохранить настройки" Style="{DynamicResource PositiveActionButton}" Command="{Binding SaveSettingsCommand}" 
                        Grid.Column="0" />

                <Button Text="По умолчанию" Style="{DynamicResource NegativeActionButton}" Command="{Binding ResetSettingsCommand}" 
                        Grid.Column="1" />
                
            </Grid>
        </StackLayout>
    </ScrollView>
    
</ContentPage>