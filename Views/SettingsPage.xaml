<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DayPlanner.Views.SettingsPage"
             Title="Настройки"
             Shell.NavBarIsVisible="True">
    
    <ScrollView>
        <StackLayout Padding="20" Spacing="10">


            <Label Text="Размер шрифта" />
            <Slider Minimum="14" Maximum="18" Value="{Binding CurrentFontSize}" />

            <Label Text="Шрифт" FontSize="Medium"/>
            <Picker ItemsSource="{Binding Fonts}" SelectedItem="{Binding CurrentFontFamily}" />

            <Button Text="Сохранить настройки" Command="{Binding SaveSettingsCommand}" />
            <Button Text="Восстановить по умолчанию" Command="{Binding ResetSettingsCommand}" 
                    BackgroundColor="LightGray" TextColor="Black" />
            
        </StackLayout>
    </ScrollView>
    
</ContentPage>